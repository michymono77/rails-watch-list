<div class="container">
  <h1 class="all-main"><%= @list.name%></h1>

  <h2>Bookmark list</h2>

  <% @list.bookmarks.each do |bookmark| %>
  <p><%= bookmark.movie.title %></p>
  <%= image_tag bookmark.movie.poster_url, alt: "movie", width: 200 %>
  <p><%= bookmark.comment %></p>
  <%= link_to list_bookmark_path(bookmark), method: :delete, data: { confirm: "Do you want to delete #{bookmark.movie.title}" } do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
  <% end %>

<%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary mt-2' %>
<br>
<%= link_to lists_path do%>
<i class="fas fa-undo"></i>
<% end %>

</div>
