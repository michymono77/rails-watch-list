<div class="container">
  <h1 class="all-main"><%= @list.name%></h1>

<h2>Bookmark list</h2>
<div class="row">
  <% @list.bookmarks.each do |bookmark| %>
  <div class="img-container col-lg-4">
  <%= image_tag bookmark.movie.poster_url, alt: "movie", width: 200 %>
  <h4><%= bookmark.movie.title %></h4>
  <p><%= bookmark.comment %></p>
  <%= link_to list_bookmark_path(bookmark), method: :delete, data: { confirm: "Do you want to delete #{bookmark.movie.title}" } do %>
            <i class="far fa-trash-alt"></i>
            <% end %>
   <br>
  <br>
  </div>
  <% end %>
</div>
<br>
<br>
<br>
<p><%= link_to 'Add bookmark', new_list_bookmark_path(@list), class: 'btn btn-primary mt-2' %></p>

<%= link_to lists_path do%>
<p><i class="fas fa-undo"></i></p>
<% end %>

</div>
