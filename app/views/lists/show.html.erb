<h1><%= @list.name%></h1>

<p>Bookmark list</p>

<% @list.bookmarks.each do |bookmark| %>
<%= link_to list_bookmark_path(bookmark), method: :delete, data: { confirm: "Do you want to delete #{bookmark.movie.title}" } do %>
          <i class="far fa-trash-alt"></i>
          <% end %>
<p><%= bookmark.movie.title %></p>
<p><%= bookmark.comment %></p>
<% end %>

<%= link_to "Add bookmark",  new_list_bookmark_path(@list) %>
<%= link_to 'Back', lists_path %>
